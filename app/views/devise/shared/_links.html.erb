  display: inline-block;
  width: 100%;
  text-decoration: none;
  background-color: #fff; /* Customize the background color as needed */
  border: 2px solid rgba(0,0,0,0.2); /* Customize the border as needed */
  padding: 5px;
  border-radius: 5px;
  text-align: center;
 /* Customize the text color as needed */
  font-size: 18px;
  opacity: 0.7;
  font-weight: 300;

  transition: background-color 0.3s;
}

.google-sign-in:hover {
  box-shadow:  0 0 10px rgba(0,0,0,0.1);
}

.google-sign-in img {
  display: inline-block;
  vertical-align: middle;
  width: 40px;
  margin-right: 10px; /* Adjust the spacing between the icon and the text as needed */
}
</style>