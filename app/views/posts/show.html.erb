    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

<div class="grid lg:grid-cols-2 grid-cols-1 mt-4 px-4">
<div class="youtube-layout">
  <% if @post.video.attached? %>
    <div class="video-container">
      <video controls>
        <source src="<%= url_for(@post.video) %>" type="video/mp4">
        
        Your browser does not support the video tag.
        
      </video>
      
    </div>
            <h2 class="text-1xl post-details">        Uploaded <%= time_ago_in_words(@post.created_at) %> ago</h2>
  <% else %>

    <% if @post.image.attached? %>
      <%= image_tag(@post.image, class: "thumbnail") %>
    <% end %>
  <% end %>
</div>

  <div class="overlay xl:text-align:left;  ">
    <div class="overlay-content">
      <h2 class="text-5xl post-details"><%= @post.title %></h2>
      <h2 class="text-2xl post-details"><%= @post.hits %> views </h2>




      <p class="post-details">
       Posted by <%= @post.user.full_name %>

      </p>
    </div>
    <br>
  <% if @post.video.attached? || @post.image.attached? %>
    <%= link_to 'Download', download_post_path(@post), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    
  <% end %>
  <% if current_user %>
<% if current_user.likes?(@post) %>
  <% unlike_button = button_to image_tag("heart-icon.svg", style:"height: 20px;"), like_path(@post.likes.find_by(user_id: current_user)), method: :delete, class:"mt-2 rounded-lg py-3 px-5 mt-5 bg-gray-100 inline-block font-medium" %>
  <%= unlike_button %>
<% else %>
  <% like_button = button_to image_tag("heart.svg", style:"height: 20px;"), likes_path, params: { like: { post_id: @post.id } }, method: :post, class:"mt-2 rounded-lg py-3 px-5 mt-5 bg-gray-100 inline-block font-medium" %>
  <%= like_button %>
<% end %>
       <h2 class="text-1xl post-details"> Likes: <%= @post.likes.count %> </h2> 

 
    <%if @post.user_id == current_user.id %>

     
          <%= link_to image_tag("edit.svg", style:"height: 20px;"), edit_post_path(@post), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block " %>

        <%= button_to image_tag("delete.svg", style:"height: 20px;"), post_path(@post), method: :delete, class: " rounded-lg py-3 px-5 bg-gray-100 font-medium" %>

    <% end %>
  <% end %>

</div>
<style>

  .youtube-layout {


  width: 65%;
  margin: 0 auto;
  }

  .thumbnail {
   display: block;
   max-width: 100%;
   max-height: 100%;
   width: auto;
   height: auto;
   margin: 0 auto;
   object-fit: contain;
  }

  .post-details {
  padding: 10px;
  }

  .post-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 8px;
  }

  .post-details p {
  font-size: 14px;
  }      .video-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 aspect ratio (change as needed) */
        padding-top: 30px;
        height: 0;
        overflow: hidden;
      }

      .video-container video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
</style>
